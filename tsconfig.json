{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "declaration": true,
    "declarationDir": "./lib",
    "moduleResolution": "Node",
    "strict": true,
    "outDir": "./lib",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
